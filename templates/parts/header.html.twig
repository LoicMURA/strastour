<header class="shadow-sm | header">
    <nav class="d-flex justify-content-between w-75 mx-auto">
        <a class="my-3" href="{{ path('course_index') }}">
            <img src="{{ asset('assets/image/logo.png') }}" alt="Logo" height="80">
        </a>
        <div class="d-flex align-items-center">
            <a class="header__link" href="{{ path('course_index') }}">Accueil</a>
            <a href="{{ path('course_showall') }}" class="header__link">Les parcours</a>
            {% if app.user %}
                {% if app.user.isPlayer %}
                    <a class="header__link" href="{{ path('game_index') }}">Jeu</a>
                {% endif %}
            {% endif %}

            <div class="header__separator"></div>

            <div class="d-flex flex-column align-items-center">
                {% if is_granted('ROLE_USER') %}
                    <p class="header__username">{{ app.user.username }}</p>
                    <a class="header__link" href="{{ path('user_logout') }}">DÃ©connexion</a>
                {% else %}
                    <a class="py-1 | header__link" href="{{ path('user_login') }}">Se
                        connecter</a>
                    <a class="py-1 | header__link header__link--little" href="{{ path
                        ('user_new') }}">S'inscrire</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>