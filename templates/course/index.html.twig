{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Accueil</h1>
    {% for parcours in courses %}
        <article>
            <h2>{{ parcours.name }}</h2>
            <p>Dans le th√®me {{ parcours.theme.name }}</p>
            <p>Description : {{ parcours.description }}</p>
            {% set link = asset('assets/image/'~parcours.picture) %}
            {% if link matches '{http(s)?://}' %}
                {% set link = parcours.picture %}
            {% endif %}
            <img src="{{ link }}" alt="test">
            <a href="{{ path('course_show', {"id": parcours.id}) }}">Aller au parcours</a>
        </article>
    {% endfor %}
{% endblock %}
